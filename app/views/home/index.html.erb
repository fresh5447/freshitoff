
<div class="jumbotron">
<table class="table table-striped table-condensed">
<thead>
  <tr>
    <th colspan="1">Description</th>
    <th colspan="1">Days left</th>
    <th colspan=".5">Status</th>
  </tr>
</thead>
<tbody>
  <% @todos.each do |todo| %>
    <tr id="<%= "todo-#{todo.id}" %>">
      <td><%= todo.description %></td>
      <td><%= distance_of_time_in_words(Time.now, todo.created_at + 7.days) %></td>
      
      <td type= "button" class="btn btn-default">
      <%=  link_to 'Complete', todo_path(todo), method: :delete, remote: true %> 
       </td>


    </tr>
  <% end %>
</tbody>
</table>
</div>

<ul class="nav nav-pills",class="label label-default">

  <li><%= link_to("Create a new todo", new_todo_path) if current_user %></li>
  <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-mini' if current_user %></li>
  <li><%= link_to "Sign In", new_user_session_path if !current_user %></li>
  <li><%= link_to "Sign Up", new_user_registration_path if !current_user %></li>
</ul>

